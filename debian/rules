#!/usr/bin/make -f

DESTDIR_DRAGONSCRIPT := $(shell realpath debian/dragonscript)
DESTDIR_DRAGONSCRIPT_DEV := $(shell realpath debian/dragonscript-dev)
DESTDIR_DRAGONSCRIPT_DSI := $(shell realpath debian/dragonscript-dsi)

SANDBOX_DRAGONSCRIPT := --install-sandbox="$(DESTDIR_DSCRIPT)"
SANDBOX_DRAGONSCRIPT_DEV := --install-sandbox="$(DESTDIR_DSCRIPT_DEV)"
SANDBOX_DRAGONSCRIPT_DSI := --install-sandbox="$(DESTDIR_DSI)"

SCONS_OPTIONS :=

%:
	dh $@

override_dh_auto_clean:
	scons $(SCONS_OPTIONS) --config=force build -c
	find -type d -name "__pycache__" | xargs -- rm -rf
	rm -f config.log

override_dh_auto_configure:
	
override_dh_auto_build:
	scons $(SCONS_OPTIONS) --config=force dscript_build dsi_build

override_dh_auto_test:
	
override_dh_auto_install:
	scons $(SCONS_OPTIONS) --config=cache $(SANDBOX_DRAGONSCRIPT) dscript
	scons $(SCONS_OPTIONS) --config=cache $(SANDBOX_DRAGONSCRIPT_DSI) dsi
	
	# split files into packages
	mkdir -p "$(DESTDIR_DRAGONSCRIPT_DEV)/usr"
	mv "$(DESTDIR_DRAGONSCRIPT)"/usr/include "$(DESTDIR_DRAGONSCRIPT_DEV)"/usr
	
	# non-dev-pkg-with-shlib-symlink
	mkdir -p "$(DESTDIR_DRAGONSCRIPT_DEV)"/usr/lib
	mv "$(DESTDIR_DRAGONSCRIPT)"/usr/lib/libdscript.so "$(DESTDIR_DRAGONSCRIPT_DEV)"/usr/lib/libdscript.so
	
	# 'arch-dependent-file-in-usr-share' does not like how DragonScript stores
	# loadable packages. we can solve this on debian only using a bit of
	# symlink magic
	cd debian/dscript ; \
	for f in `find "$(DESTDIR_DRAGONSCRIPT)"/usr/share/dragonscript -name "*.so"`; do \
		f2=`echo $$f | sed -e "s@usr/share@usr/lib@"`; \
		f3=`echo $$f | sed -e "s@.*/usr/share@/usr/lib@"`; \
		mkdir -p `dirname $$f2`; \
		mv $$f $$f2; \
		ln -sf "$$f3" $$f; \
	done
	
	# ubuntu seems to dislike it if build files are still around after this point in time
	scons $(SCONS_OPTIONS) --config=cache dscript dsi -c
